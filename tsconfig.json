{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "allowJs": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["es6"],
    "declaration": true,
    "declarationDir": "./types",
    "removeComments": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "outDir": "dist",                          
    "rootDir": "src",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
